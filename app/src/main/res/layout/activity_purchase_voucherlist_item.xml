<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:backgroundTint="@color/new_grey"
    android:elevation="10dp"
    card_view:cardCornerRadius="12dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_bg"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageView_voucherListItem_smallMap"
            android:layout_width="71dp"
            android:layout_height="66dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:elevation="15dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:src="@drawable/ecotranslogo"
            android:thicknessRatio="1.9"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.052"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.058" />

        <TextView
            android:id="@+id/textView_voucherListItem_partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/musticapro_semibold"
            android:text="partner"
            android:textColor="@color/green_1"
            android:textStyle="italic"
            card_view:layout_constraintEnd_toEndOf="@+id/imageView_voucherListItem_smallMap"
            card_view:layout_constraintHorizontal_bias="0.481"
            card_view:layout_constraintStart_toStartOf="@+id/imageView_voucherListItem_smallMap"
            card_view:layout_constraintTop_toBottomOf="@+id/imageView_voucherListItem_smallMap" />

        <TextView
            android:id="@+id/textView_voucherListItem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/musticapro_semibold"
            android:text="Name"
            android:textColor="@color/green_2"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.052"
            card_view:layout_constraintStart_toEndOf="@+id/imageView_voucherListItem_smallMap"
            card_view:layout_constraintTop_toTopOf="@+id/imageView_voucherListItem_smallMap" />

        <TextView
            android:id="@+id/textView_voucherListItem_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Category"
            android:textColor="@color/grey_1"
            android:textStyle="italic"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/textView_voucherListItem_name"
            card_view:layout_constraintTop_toBottomOf="@+id/textView_voucherListItem_name" />

        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/musticapro_semibold"
            android:text="Price: "
            android:textColor="@color/grey_1"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/textView_voucherListItem_category"
            card_view:layout_constraintTop_toBottomOf="@+id/textView_voucherListItem_category" />

        <TextView
            android:id="@+id/textView_voucherListItem_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/musticapro_semibold"
            android:text="-"
            android:textColor="@color/grey_1"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.039"
            card_view:layout_constraintStart_toEndOf="@+id/text_price"
            card_view:layout_constraintTop_toTopOf="@+id/text_price" />

        <TextView
            android:id="@+id/textView_voucherListItem_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/musticapro_semibold"
            android:text="0 left"
            android:textColor="@color/grey_1"
            card_view:layout_constraintBottom_toTopOf="@+id/imageButton_voucherListItem_buy"
            card_view:layout_constraintEnd_toEndOf="@+id/imageButton_voucherListItem_buy"
            card_view:layout_constraintStart_toStartOf="@+id/imageButton_voucherListItem_buy"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.8" />

        <ImageButton
            android:id="@+id/imageButton_voucherListItem_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_bg"
            android:backgroundTint="@color/green_1"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_add_24"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.728" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>