<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:backgroundTint="@color/new_grey"
    android:elevation="10dp"
    card_view:cardCornerRadius="12dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_bg"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageView_voucherListItem_smallMap"
            android:layout_width="71dp"
            android:layout_height="66dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:elevation="15dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:src="@drawable/ecotranslogo"
            android:thicknessRatio="1.9"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.052"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.058" />

        <TextView
            android:id="@+id/textView_voucherListItem_partner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/musticapro_semibold"
            android:text="partner"
            android:textColor="@color/green_1"
            android:textStyle="italic"
            card_view:layout_constraintEnd_toEndOf="@+id/imageView_voucherListItem_smallMap"
            card_view:layout_constraintHorizontal_bias="0.481"
            card_view:layout_constraintStart_toStartOf="@+id/imageView_voucherListItem_smallMap"
            card_view:layout_constraintTop_toBottomOf="@+id/imageView_voucherListItem_smallMap" />

        <TextView
            android:id="@+id/textView_voucherListItem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/musticapro_semibold"
            android:text="Name"
            android:textColor="@color/green_2"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.052"
            card_view:layout_constraintStart_toEndOf="@+id/imageView_voucherListItem_smallMap"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_voucherListItem_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Category"
            android:textColor="@color/grey_1"
            android:textStyle="italic"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/textView_voucherListItem_name"
            card_view:layout_constraintTop_toBottomOf="@+id/textView_voucherListItem_name" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/musticapro_semibold"
            android:text="Date: "
            android:textColor="@color/grey_1"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/textView_voucherListItem_name"
            card_view:layout_constraintTop_toBottomOf="@+id/textView_voucherListItem_category" />

        <TextView
            android:id="@+id/textView_voucherListItem_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/musticapro_semibold"
            android:text="-"
            android:textColor="@color/grey_1"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.051"
            card_view:layout_constraintStart_toEndOf="@+id/text_date"
            card_view:layout_constraintTop_toTopOf="@+id/text_date" />

        <ProgressBar
            android:id="@+id/progressBar_boughtItem"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/green_2"
            android:visibility="gone"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>